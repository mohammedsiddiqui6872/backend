# MongoDB
MONGODB_URI=mongodb://localhost:27017/gritservices

# Frontend URL (allow all subdomains)
FRONTEND_URL=https://*.gritservices.ae

# Super Admin
SUPER_ADMIN_PASSWORD=your-super-admin-password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# Server
PORT=5000
NODE_ENV=production

# Image Storage (set to true to use Cloudinary)
USE_CLOUDINARY=false

# Cloudinary (optional - only if USE_CLOUDINARY=true)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration - Twilio (optional)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway - Stripe (optional)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret